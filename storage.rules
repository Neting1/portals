rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Helper function to check if user is admin
    function isAdmin(uid) {
      return exists(/databases/$(database)/documents/users/$(uid)) && 
             get(/databases/$(database)/documents/users/$(uid)).data.role == 'Admin';
    }
    
    // SECURITY FIX: User avatars - public read, user write
    match /avatars/{userId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
      allow delete: if request.auth != null && request.auth.uid == userId;
    }
    
    // SECURITY FIX: User documents - owner or admin only
    match /documents/{userId}/{allPaths=**} {
      allow read: if request.auth != null && (request.auth.uid == userId || isAdmin(request.auth.uid));
      allow write: if request.auth != null && (request.auth.uid == userId || isAdmin(request.auth.uid));
      allow delete: if request.auth != null && (request.auth.uid == userId || isAdmin(request.auth.uid));
    }
    
    // SECURITY FIX: Admin files - admin only
    match /admin/{allPaths=**} {
      allow read, write, delete: if request.auth != null && isAdmin(request.auth.uid);
    }
    
    // SECURITY FIX: Deny all other paths by default
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}